{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "bundler",
  },
  "include": [
    "src/ts/ziggy",
    "src/ts/vite-plugin",
  ],
  "exclude": [
    "vendor",
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts",
    "tests/fixtures"
  ]
}