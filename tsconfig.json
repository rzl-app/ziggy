{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/ts/browser.ts",
    "src/ts/index.ts",
    "src/ts/types.ts",
    "src/ts/global.ts"
  ],
  "exclude": [
    "vendor",
