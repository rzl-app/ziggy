  "dependencies": {
    "@types/qs": "^6.9.17",
    "chalk": "^5.4.1",
    "qs": "~6.9.7",
    "vite-plugin-run": "^0.6.1"
  },
  "description": "Typed Laravel route generator for any frontend â€” works with React, Vue, Vanilla JS, and other JavaScript-based stacks.",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/generator": "^7.28.0",
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.20.7",
    "@types/vue": "^2.0.0",
    "del-cli": "^6.0.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.8",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "pretty-bytes": "^7.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.1.3",
    "vue": "^3.5.17"
  },
  "sideEffects": false,
  "exports": {
    "./vite-plugin": {
      "types": "./dist/vite-plugin/index.d.ts",
      "import": "./dist/vite-plugin/index.esm.js",
      "require": "./dist/vite-plugin/index.cjs",
      "default": "./dist/vite-plugin/index.esm.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.esm.js"
    }
  },
  "typesVersions": {
    "*": {
      "vite-plugin": [
        "dist/vite-plugin/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "homepage": "https://github.com/rzl-app/ziggy#readme",
  "jsdelivr": "./dist/rzl-ziggy.iife.js",
  "keywords": [
    "laravel",
    "routes",
    "ziggy",
    "rzl-ziggy",
    "rzl-app",
    "rzl app",
    "app",
    "rzl",
    "rzl-ziggy-js",
    "rzl ziggy js",
    "rzl ziggy",
    "ziggy js"
  ],
  "license": "MIT",
  "main": "./dist/index.esm.js",
  "mangle": {
    "regex": "^_(?!query)"
  },
  "module": "./dist/index.esm.js",
  "name": "rzl-app-ziggy",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzl-app/ziggy.git"
  },
  "scripts": {
    "start": "vite",
    "prepare": "npm run build",
    "format": "prettier . --write",
    "check-publish": "npm pack --dry-run",
    "clear:dist": "rm -rf ./dist || true",
    "postbuild": "del-cli \"dist/**/*.d.cts\"",
    "prepublishOnly": "npm run clear:dist",
    "prepare:deprecated": "npm run build && npm run build:vite-plugin",
    "release-patch": "npm version patch && git push && git push --tags && npm publish",
    "build": "npm run clear:dist && tsup && npm run esbuild-minify && npm run dts-minify && npm run rename-iife && npm run postbuild",
    "rename-iife": "tsx tools/rename-iife.ts",
    "dts-minify": "tsx tools/minify-dts.ts",
    "esbuild-minify": "tsx tools/esbuild.ts",
    "test": "vitest --typecheck"
  },
  "peerDependencies": {
    "vue": "^2.7.0 || ^3.0.0"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/rzl-ziggy.iife.js",
  "version": "1.0.51"
}
