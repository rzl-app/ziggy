      "email": "jacob@tighten.co",
      "name": "Jacob Baker-Kretzmar"
    }
  ],
  "bugs": "https://github.com/rzl-app/ziggy/issues",
  "dependencies": {
    "@types/qs": "^6.9.17",
    "qs": "~6.9.7",
    "vite-plugin-run": "^0.6.1"
  },
  "description": "Use your Laravel named routes in JavaScript or TypeScript.",
  "devDependencies": {
    "dts-bundle-generator": "^9.5.1",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "microbundle": "^0.15.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.1.3"
  },
  "sideEffects": false,
  "exports": {
    "./vite-plugin": {
      "types": "./dist/vite-plugin/index.d.ts",
      "import": "./dist/vite-plugin/index.js",
      "require": "./dist/vite-plugin/index.cjs",
      "default": "./dist/vite-plugin/index.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "vite-plugin": [
        "dist/vite-plugin/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "homepage": "https://github.com/rzl-app/ziggy#readme",
  "jsdelivr": "./dist/route.umd.js",
  "keywords": [
    "laravel",
    "routes",
    "ziggy",
    "rzl-ziggy",
    "rzl-app",
    "rzl app",
    "app",
    "rzl",
    "rzl-ziggy-js",
    "rzl ziggy js",
    "rzl ziggy",
    "ziggy js"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "mangle": {
    "regex": "^_(?!query)"
  },
  "module": "./dist/index.esm.js",
  "name": "rzl-app-ziggy",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzl-app/ziggy.git"
  },
  "scripts": {
    "start": "vite",
    "build": "npm run removeDirDist && npm run build:esm && npm run build:umd && npm run build:types",
    "build:vite-plugin": "npm run removeDirDist:vite-plugin && microbundle -i ./src/ts/vite-plugin/index.ts -o ./dist/vite-plugin/index.js --format modern,esm,cjs --no-sourcemap --no-generateTypes && npm run build:vite-plugin-types",
    "build:vite-plugin-types": "dts-bundle-generator --config dts-config-vite-plugin.cjs --silent",
    "build:esm": "microbundle -i ./src/ts/index.ts -o ./dist/index.js --format modern,esm --no-sourcemap --no-generateTypes --external none",
    "build:npm": "microbundle -i ./src/ts/index.ts -o ./dist/index.js --format modern,esm --no-sourcemap --no-generateTypes",
    "build:types": "dts-bundle-generator --config dts-config.cjs --silent",
    "build:types-tsconfig": "tsc -p tsconfig.build.json && npm run removeUnUsedDTSDirDist",
    "build:umd": "microbundle -i ./src/ts/browser.ts -o ./dist/route.js --format umd --name route --no-sourcemap --no-generateTypes --external none",
    "check-publish": "npm pack --dry-run",
    "format": "prettier . --write",
    "prepare": "npm run build && npm run build:vite-plugin",
    "prepublishOnly": "npm run removeDirDist && npm run build:npm && npm run build:types",
    "release-patch": "npm version patch && git push && git push --tags && npm publish",
    "removeDirDist": "rm -rf ./dist || true",
    "removeDirDist:vite-plugin": "rm -rf ./dist/vite-plugin/* || true",
    "removeUnUsedDTSDirDist": "node ./src/ts/scripts/clean-dts.mjs",
    "test": "vitest --typecheck"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/route.umd.js",
  "version": "1.0.13"
}
